<%= form_for @recipe do |f|%>
    <%= f.label :title %> <br>
    <%= f.text_field :title %> <br>

    <%= f.fields_for :ingredients do |ingre|  %>
        <%= ingre.label :name %>
        <%= ingre.text_field :name %>
        <%= ingre.label :quantity %>
        <%= ingre.number_field :quantity %>
        <% end %>
    <%= f.submit %>
<% end %>
